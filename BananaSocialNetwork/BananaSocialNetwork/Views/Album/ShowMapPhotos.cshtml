@model BananaSocialNetwork.Models.Album

@{
    Layout = "~/Views/Shared/_UsersLayout.cshtml";
}

<script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
@Scripts.Render("~/Scripts/google_map.js")
<script type="text/javascript">

    var arr = [];
    var index = 0;
</script>

@foreach (var photos in Model.Photos)
{
    <script type="text/javascript">

        arr[index] = @photos.GeoLong.ToString().Replace(',', '.');
        index++;
        arr[index] = @photos.GeoLat.ToString().Replace(',', '.');
        index++;
    </script>
}

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {

            GetAllPhotosMap(arr, 2);

        });
    </script>
}
<div class="middle_content">
    <div class="profile">
        <div class="header_form">
            <p class="text-size-12"><i class="fa fa-map-marker margin_5"></i>All photos on the world map</p>
        </div>
        <div id="canvas" style="height: 600px; width:100%"></div>
    </div>
</div>