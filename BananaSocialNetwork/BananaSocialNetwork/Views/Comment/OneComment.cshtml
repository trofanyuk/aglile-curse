@model BananaSocialNetwork.Models.Comment
@{
    Layout = null;
    string id_div = "com_" + Model.Id;
}

<div id="@id_div" class="comment">
    <div class="display_block">
        <div class="float_left" style="width:90%">
            <div style="display:inline-block; background-color: red; width:50px; height:50px; margin:5px;">
                @* Avatar *@
            </div>
            <div style="display:inline-block; vertical-align:top; width: 380px;">
                <div style="margin-top:10px;">
                    <p style="font-weight:bold;" class="dark_green_text">@Model.User.Email</p>
                </div>
                <div style="padding-top:5px;">
                    <p style="font-size:13px;">@Model.Text</p>
                </div>
            </div>
        </div>
        <div class="float_right del">
            <a onclick="del_comment(@Model.Id, @id_div)" class="dark_green_text">
                <i class="fa fa-close fa-1x"></i>
            </a>
        </div>
    </div>
</div>
